<div class=' flex flex-col gap-8 mt-8'>
  <div class='flex gap-8 items-center'>
    <img src="<%= @user.photo %>" alt="<%= @user.name %>" class='w-32 h-32 rounded-full'>
    <div class="flex flex-col">
      <h1 class=" text-3xl"><%= @user.name %></h1>
      <p><%= @user.posts_counter%> posts</p>
    </div>
  </div>

  <div class=' flex flex-col shadow-md shadow-slate-400 p-4 rounded-md gap-4'>
    <h2 class='text-2xl'>Bio</h2>
    <p><%= @user.bio %></p>
  </div>

 

  <div class=' self-center mb-8 shadow-md shadow-slate-400 p-4 rounded-md  '>
    <%= button_to "See all posts", user_posts_path(@user.id), method:'get' %>
  </div>
</div>
