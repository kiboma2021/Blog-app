<div class='flex flex-col gap-4 mt-8'>
  <div class='flex gap-8 items-center'>
    <img src="<%= @user.photo %>" alt="<%= @user.name %>" class='w-32 h-32 rounded-full'>
    <div class="flex flex-col">
      <h1 class=" text-3xl"><%= @user.name %></h1>
      <p><%= @user.posts_counter%> posts</p>
    </div>
  </div>

  <div class=' self-end mb-8 shadow-md shadow-slate-400 p-4 rounded-md'>
    <%= button_to "New Post", new_user_post_path, method:'get' %>
  </div>

  <div class='flex flex-col gap-4 mt-4'>
    <% @posts.each_with_index do |post, idx| %>
      <%= link_to user_post_path(user_id: @user.id, id: post.id) do %>
        <div class="flex flex-col gap-4 bg-slate-500 text-white p-4 rounded-lg">
          <p class=' text-xl'>Post <%= idx + 1 %></p>
          <h2 class=' text-3xl'><%= post.title %></h2>
          <p class=' pl-8'><%= post.text %></p>

          <div class='flex self-end gap-4 bg-white p-4 text-slate-800 rounded-md'>
            <p ><%=post.comments_counter %> comments</p>
            <p><%=post.likes_counter %> likes</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class=' self-end mb-8 shadow-md shadow-slate-400 p-4 rounded-md'>
    <%= button_to "Pagination" %>
  </div>
</div>